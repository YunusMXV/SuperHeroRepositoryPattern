@model IEnumerable<DotNET_CRUD.Models.SuperHero>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["Success"] != null)
{
    <h5 class="text-primary success-message">@TempData["Success"]</h5>
}


<h1>List of Superheroes</h1>
<br />
<a class="btn btn-primary mb-3" asp-action="Create">Create New Superhero</a>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="color:white;">
                SuperHero Name
            </th>
            <th style="color:white;">
                First Name
            </th>
            <th style="color:white;">
                Last Name
            </th>
            <th style="color:white;">
                Group
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.SuperHeroName)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td style="color:white;">
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>